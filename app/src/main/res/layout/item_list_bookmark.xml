<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/small_layout_margin"
        android:layout_marginLeft="@dimen/small_layout_margin"
        android:layout_marginRight="@dimen/small_layout_margin"
        android:layout_marginTop="@dimen/small_layout_margin"
        android:focusableInTouchMode="true"
        app:cardCornerRadius="3dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/medium_layout_margin"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_original_title_db"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:gravity="center"
                android:textColor="@color/colorTextDefault"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="Black Panther"/>

            <TextView
                android:id="@+id/tv_tagline_db"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:gravity="center"
                android:textSize="14sp"
                android:textStyle="italic"
                tools:text="Tagline"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/default_layout_margin">

                        <TextView
                            android:id="@+id/tv_label_watched_bookmark"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:background="@color/colorAccent"
                            android:paddingEnd="4dp"
                            android:paddingStart="4dp"
                            android:elevation="5dp"
                            android:textAllCaps="true"
                            android:textStyle="bold"
                            android:layout_centerHorizontal="true"
                            android:layout_marginStart="@dimen/small_layout_margin"
                            android:visibility="visible"
                            android:textColor="@color/colorLightGrey"
                            android:text="@string/watched_flag"/>

                        <ImageView
                            android:id="@+id/iv_movie_poster_db"
                            android:layout_width="154dp"
                            android:layout_height="180dp"
                            android:layout_gravity="center"
                            android:layout_centerHorizontal="true"
                            android:contentDescription="@string/movie_poster"
                            android:elevation="2dp"
                            android:layout_marginTop="@dimen/medium_layout_margin"
                            android:scaleType="centerInside"
                            android:src="@drawable/poster_image_place_holder"
                            android:textSize="30sp"
                            android:textStyle="bold"/>

                    </RelativeLayout>



                    <LinearLayout
                        style="@style/DetailsItemLayout"
                        android:layout_gravity="center"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/rounded_corner"
                        android:paddingEnd="4dp"
                        android:paddingStart="4dp"
                        android:paddingTop="4dp">
                        <RatingBar
                            style="?android:attr/ratingBarStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:numStars="1"
                            android:rating="1"
                            android:stepSize="1"/>
                        <TextView
                            android:id="@+id/tv_vote_average_db"
                            style="@style/DetailItemValueStyle"
                            tools:text="9.9"
                            android:textColor="@color/colorLightGrey"/>
                        <TextView
                            style="@style/DetailItemLabelStyle"
                            android:text="@string/slash"
                            android:textColor="@color/colorLightGrey"/>
                        <TextView
                            android:id="@+id/tv_vote_count_db"
                            style="@style/DetailItemValueStyle"
                            tools:text="9999999"
                            android:textColor="@color/colorLightGrey"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:layout_marginStart="8dp"
                    android:layout_weight="9"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/medium_layout_margin">
                        <TextView
                            android:id="@+id/tv_release_date_db"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="start"
                            android:textColor="@color/colorAccent"
                            android:textSize="16sp"
                            android:textStyle="italic|bold"
                            tools:text="2018"/>
                        <TextView
                            android:id="@+id/tv_runtime_db"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="@color/colorAccent"
                            android:textSize="16sp"
                            android:textStyle="italic|bold"
                            tools:text="147"/>
                    </LinearLayout>

                    <LinearLayout
                        style="@style/DetailsItemLayout">
                        <TextView
                            style="@style/DetailItemLabelStyle"
                            android:layout_width="85dp"
                            android:text="@string/languages_label"/>
                        <TextView
                            android:id="@+id/tv_original_language_db"
                            style="@style/DetailItemValueStyle"
                            tools:text="English, Spanish"/>
                    </LinearLayout>

                    <LinearLayout
                        style="@style/DetailsItemLayout">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                style="@style/DetailItemLabelStyle"
                                android:layout_width="85dp"
                                android:text="@string/popularity_label"/>
                            <TextView
                                android:id="@+id/tv_popularity_db"
                                style="@style/DetailItemValueStyle"
                                tools:text="198.543"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        style="@style/DetailsItemLayout">
                        <TextView
                            style="@style/DetailItemLabelStyle"
                            android:layout_width="85dp"
                            android:text="@string/budget_label"/>
                        <TextView
                            android:id="@+id/tv_budget_db"
                            style="@style/DetailItemValueStyle"
                            tools:text="$1.780,000.00"/>
                    </LinearLayout>

                    <LinearLayout
                        style="@style/DetailsItemLayout">
                        <TextView
                            style="@style/DetailItemLabelStyle"
                            android:layout_width="85dp"
                            android:text="@string/revenue_label"/>
                        <TextView
                            android:id="@+id/tv_revenue_db"
                            style="@style/DetailItemValueStyle"
                            tools:text="$3,298,111.86"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_genres_db"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:textColor="@color/colorPrimary"
                        android:textSize="14sp"
                        tools:text="Adventure | Action | Thriller"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <Button
                            android:id="@+id/bt_item_list_details_db"
                            style="@style/Base.Widget.AppCompat.Button.Borderless"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:text="@string/more_details"
                            android:textColor="@color/colorPrimary"
                            android:textSize="12sp"/>
                        <Button
                            android:id="@+id/bt_item_list_homepage_db"
                            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:text="@string/homepage"
                            android:textColor="@color/colorPrimary"
                            android:textSize="12sp"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_overview_db"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:textSize="14sp"
                        android:visibility="gone"
                        tools:text="Overview... ..."/>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>