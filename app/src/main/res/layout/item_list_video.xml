<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_layout_margin"
        android:layout_marginBottom="@dimen/small_layout_margin"
        android:layout_marginLeft="@dimen/small_layout_margin"
        android:layout_marginRight="@dimen/small_layout_margin"
        app:cardCornerRadius="3dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_video_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/medium_layout_margin"
                android:layout_marginTop="@dimen/medium_layout_margin"
                android:gravity="center"
                android:maxLines="2"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="Mission Impossible - Fallout" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="@dimen/medium_layout_margin"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_video_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/small_layout_margin"
                    android:layout_marginRight="@dimen/small_layout_margin"
                    tools:text="Clip"/>
                <TextView
                    android:id="@+id/tv_video_site"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/small_layout_margin"
                    android:layout_marginRight="@dimen/small_layout_margin"
                    tools:text="YouTube"/>
                <TextView
                    android:id="@+id/tv_video_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/small_layout_margin"
                    android:layout_marginRight="@dimen/small_layout_margin"
                    tools:text="1080"/>
            </LinearLayout>

            <VideoView
                android:id="@+id/vv_movie_video"
                android:layout_width="match_parent"
                android:layout_height="250dp"/>

            <Button
                android:id="@+id/bt_see_on_youtube"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/see_on_youtube"
                android:layout_margin="@dimen/small_layout_margin"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>