<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/medium_layout_margin">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorLightGrey"
                android:orientation="vertical">
                    <ImageView
                        android:id="@+id/iv_movie_poster"
                        android:layout_width="185dp"
                        android:layout_height="278dp"
                        android:layout_gravity="center"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:scaleType="centerCrop"
                        android:src="@drawable/poster_image_place_holder"
                        android:contentDescription="@string/movie_poster" />
                    <TextView
                        android:id="@+id/tv_movie_original_title"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@color/colorLightGrey"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:maxLines="2"
                        tools:text="Original Title"
                        android:textSize="14sp"/>

                    <LinearLayout
                        style="@style/DetailsItemLayout"
                        android:layout_marginBottom="4dp"
                        android:layout_gravity="center">
                        <RatingBar
                            android:id="@+id/rating_bar_vote_average"
                            style="?android:attr/ratingBarStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:numStars="1"
                            android:rating="1"
                            android:stepSize="1"/>
                        <TextView
                            android:id="@+id/tv_vote_average"
                            style="@style/DetailItemValueStyle"
                            tools:text="0"/>
                        <TextView
                            android:id="@+id/tv_release_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:layout_marginStart="16dp"
                            tools:text="2018"/>

                    </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>

</LinearLayout>
