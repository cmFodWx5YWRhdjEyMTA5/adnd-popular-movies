<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">



    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/detail_backdrop_height"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <!-- CollapsingToolbarLayout TEXT SHADOW==> app:expandedTitleTextAppearance="@style/TextAppearance.Design.CollapsingToolbar.Expanded.Shadow" -->
        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="@color/colorPrimary"
            app:expandedTitleMarginEnd="64dp"
            app:expandedTitleMarginStart="48dp"
            app:expandedTitleTextAppearance="@style/TextAppearance.AppCompat.Title"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <ImageView
                android:id="@+id/iv_movie_backdrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/movie_backdrop_image"
                android:fitsSystemWindows="true"
                android:scaleType="centerCrop"
                android:src="@drawable/backdrop_image_place_holder"
                app:layout_collapseMode="parallax" />

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal|bottom"
                android:background="@drawable/backdrop_image_overlay"/>

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?android:attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:id="@+id/nested_scroll_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="8dp">

            <ProgressBar
                android:id="@+id/indeterminateBar"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>

            <LinearLayout
                android:id="@+id/container_additional_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="vertical">

                <!-- TabLayout  -->

                <!-- TODO CONTENT Start-->
                <!--<LinearLayout-->
                    <!--android:id="@+id/section_content"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:orientation="vertical">-->

                <!--</LinearLayout>-->
                <!-- TODO CONTENT end-->


                <!-- TODO Info Start-->
                <LinearLayout
                    android:id="@+id/section_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/default_layout_margin"
                        android:layout_marginRight="@dimen/default_layout_margin"
                        android:layout_marginTop="@dimen/small_layout_margin"
                        android:gravity="start"
                        android:text="@string/details"
                        android:textAllCaps="true"
                        android:textSize="20sp"
                        android:textStyle="bold"/>

                    <include layout="@layout/divider_header"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/default_layout_margin"
                        android:layout_marginRight="@dimen/default_layout_margin"
                        android:baselineAligned="false"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:layout_weight="6"
                            android:orientation="vertical">
                            <ImageView
                                android:id="@+id/iv_movie_poster"
                                android:layout_width="154dp"
                                android:layout_height="231dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="4dp"
                                android:background="@android:drawable/dialog_holo_light_frame"
                                android:elevation="2dp"
                                android:contentDescription="@string/movie_poster"
                                android:scaleType="centerCrop"
                                android:src="@drawable/poster_image_place_holder"
                                android:textSize="30sp"
                                android:textStyle="bold"/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/container_details"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/small_layout_margin"
                            android:layout_marginStart="8dp"
                            android:layout_weight="7"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_release_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="28sp"
                                tools:text="2018"/>

                            <TextView
                                android:id="@+id/tv_runtime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:textStyle="bold|italic"
                                tools:text="147"/>

                            <LinearLayout
                                style="@style/DetailsItemLayout">
                                <RatingBar
                                    style="?android:attr/ratingBarStyleSmall"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:numStars="1"
                                    android:rating="1"
                                    android:stepSize="1"/>
                                <TextView
                                    android:id="@+id/tv_vote_average"
                                    style="@style/DetailItemValueStyle"
                                    tools:text="8.3"/>
                                <TextView
                                    style="@style/DetailItemLabelStyle"
                                    android:text="@string/slash"/>
                                <TextView
                                    android:id="@+id/tv_vote_count"
                                    style="@style/DetailItemValueStyle"
                                    tools:text="692"/>
                            </LinearLayout>

                            <LinearLayout
                                style="@style/DetailsItemLayoutVertical">
                                <TextView
                                    style="@style/DetailItemLabelStyle"
                                    android:text="@string/original_title_label"/>
                                <TextView
                                    android:id="@+id/tv_title"
                                    style="@style/DetailItemValueStyle"
                                    tools:text="Black Panther"/>
                            </LinearLayout>


                            <LinearLayout
                                style="@style/DetailsItemLayoutVertical">
                                <TextView
                                    style="@style/DetailItemLabelStyle"
                                    android:text="@string/spoken_languages_label"/>
                                <TextView
                                    android:id="@+id/tv_original_language"
                                    style="@style/DetailItemValueStyle"
                                    tools:text="English"/>
                            </LinearLayout>

                            <LinearLayout
                                style="@style/DetailsItemLayout">
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <TextView
                                        style="@style/DetailItemLabelStyle"
                                        android:text="@string/popularity_label"/>
                                    <TextView
                                        android:id="@+id/tv_popularity"
                                        style="@style/DetailItemValueStyle"
                                        tools:text="198.543"/>
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                style="@style/DetailsItemLayout">
                                <TextView
                                    style="@style/DetailItemLabelStyle"
                                    android:text="@string/budget_label"/>
                                <TextView
                                    android:id="@+id/tv_buget"
                                    style="@style/DetailItemValueStyle"
                                    tools:text="$1.780,000.00"/>
                            </LinearLayout>

                            <LinearLayout
                                style="@style/DetailsItemLayout">
                                <TextView
                                    style="@style/DetailItemLabelStyle"
                                    android:text="@string/revenue_label"/>
                                <TextView
                                    android:id="@+id/tv_revenue"
                                    style="@style/DetailItemValueStyle"
                                    tools:text="$3,298,111.86"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_genres"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingLeft="@dimen/medium_layout_margin"
                        android:paddingRight="@dimen/medium_layout_margin"
                        android:layout_marginLeft="@dimen/default_layout_margin"
                        android:layout_marginRight="@dimen/default_layout_margin"
                        android:layout_marginTop="@dimen/default_layout_margin"
                        android:padding="4dp"
                        android:textColor="@color/colorAccent"
                        tools:text="Avventura, Fantascienza, Fantasy, Azione"/>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/card_margin"
                        android:layout_marginRight="@dimen/card_margin"
                        android:layout_marginTop="@dimen/card_margin"
                        android:layout_marginBottom="@dimen/medium_layout_margin"
                        app:cardCornerRadius="3dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            style="@style/Widget.CardContent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/tv_tagline"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:gravity="center"
                                android:textSize="20sp"
                                android:textStyle="italic|bold"
                                tools:text="Some Missions Are Not A Choice"/>
                            <TextView
                                android:id="@+id/tv_overview"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="4dp"
                                android:textSize="16sp"
                                tools:text="Overview"/>

                            <Button
                                android:id="@+id/bt_home_page"
                                style="@style/Base.Widget.AppCompat.Button.Borderless"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="@string/homepage"
                                android:textColor="@color/colorAccent"
                                android:textSize="16sp"/>

                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                </LinearLayout>
                <!-- TODO INFO End-->

                <!-- TODO VIDEOS Start -->
                <LinearLayout
                    android:id="@+id/section_videos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/default_layout_margin"
                        android:layout_marginRight="@dimen/default_layout_margin"
                        android:layout_marginTop="@dimen/small_layout_margin"
                        android:gravity="start"
                        android:text="@string/videos"
                        android:textAllCaps="true"
                        android:textSize="20sp"
                        android:textStyle="bold"/>

                    <include layout="@layout/divider_header"/>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_movies_videos_details"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/default_layout_margin"
                        android:layout_marginRight="@dimen/default_layout_margin"/>
                </LinearLayout>
                <!-- TODO VIDEOS End -->

                <!-- TODO REVIEWS Start -->
                <LinearLayout
                    android:id="@+id/section_reviews"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/default_layout_margin"
                        android:layout_marginRight="@dimen/default_layout_margin"
                        android:layout_marginTop="@dimen/small_layout_margin"
                        android:gravity="start"
                        android:text="@string/reviews"
                        android:textAllCaps="true"
                        android:textSize="20sp"
                        android:textStyle="bold"/>

                    <include layout="@layout/divider_header"/>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_movies_reviews_details"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/default_layout_margin"
                        android:layout_marginRight="@dimen/default_layout_margin"/>

                </LinearLayout>
                <!-- TODO REVIEWS End -->

                <!-- TODO COMPANIES Start -->

                <LinearLayout
                    android:id="@+id/section_companies"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/default_layout_margin"
                        android:layout_marginRight="@dimen/default_layout_margin"
                        android:layout_marginTop="@dimen/small_layout_margin"
                        android:gravity="start"
                        android:text="@string/production_companies"
                        android:textAllCaps="true"
                        android:textSize="20sp"
                        android:textStyle="bold"/>

                    <include layout="@layout/divider_header"/>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/card_margin"
                        android:layout_marginRight="@dimen/card_margin"
                        android:layout_marginTop="@dimen/card_margin"
                        android:layout_marginBottom="@dimen/medium_layout_margin"
                        app:cardCornerRadius="3dp"
                        app:cardElevation="4dp">

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/rv_companies"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/default_layout_margin"
                            android:layout_marginLeft="@dimen/default_layout_margin"
                            android:layout_marginRight="@dimen/default_layout_margin"/>
                    </android.support.v7.widget.CardView>

                </LinearLayout>

                <!-- TODO COMPANIES End -->

                <include layout="@layout/divider"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_network_status"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/no_internet_connection"
                android:textColor="@color/colorWarning"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tv_no_movie_details"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/movie_details_could_not_be_loaded"
                android:textColor="@color/colorWarning"
                android:visibility="gone"/>

            <include layout="@layout/tmdb_branding"/>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <android.support.design.widget.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:tabGravity="fill"
        android:layout_gravity="bottom"
        android:elevation="5dp"
        android:background="@color/colorLightGrey">
    </android.support.design.widget.TabLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/float_share_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        android:clickable="true"
        android:background="@android:drawable/dialog_holo_light_frame"
        android:elevation="2dp"
        android:focusable="true"
        android:src="@drawable/ic_share"
        app:layout_anchor="@id/appbar"
        app:layout_anchorGravity="bottom|right|end" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/float_save_bookmark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="80dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/ic_bookmark_unsaved"
        app:layout_anchor="@id/appbar"
        app:layout_anchorGravity="bottom|right|end" />

</android.support.design.widget.CoordinatorLayout>