<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.udacity.popularmovies">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- Allows the application to keep the screen from dimming or the processor from sleeping -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="com.udacity.popularmovies.TERMS_READ"/>

    <application
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_descriptor"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning">
        <activity
            android:name=".activities.MovieListActivity"
            android:label="Popular Movies">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.MovieDetailsActivity"
            android:launchMode="singleTop"
            android:label="Movie Details"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar"
            android:parentActivityName=".activities.MovieListActivity" />
        <activity
            android:name=".activities.BookmarkActivity"
            android:label="Bookmarks (offline)"
            android:parentActivityName=".activities.MovieListActivity" />
        <activity
            android:name=".activities.MovieVideosActivity"
            android:label="Trailers and Clips"
            android:parentActivityName=".activities.MovieDetailsActivity"/>
        <activity
            android:name=".activities.MovieReviewsActivity"
            android:label="Movie Reviews"
            android:parentActivityName=".activities.MovieDetailsActivity"/>

        <!-- Bookmark Provider for Database access through ContentProvider class -->
        <provider
            android:authorities="com.udacity.popularmovies"
            android:name="com.udacity.popularmovies.localdatabase.BookmarkContentProvider"
            android:exported="true"/>
    </application>

</manifest>